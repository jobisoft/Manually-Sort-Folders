{
  "manifest_version": 2,
  "name": "Manually sort folders",
  "description": "Reorder accounts; reorder folder; choose startup folder.",
  "version": "3.0.0",
  "author": "Jonathan Protzenko",
  "homepage_url": "http://wiki.github.com/protz/Manually-Sort-Folders/",
  "applications": {
    "gecko": {
      "id": "tbsortfolders@xulforum.org",
      "strict_min_version": "78.2"
    }
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  },
  "permissions": [
    "accountsRead",
    "storage",
    "menus"
  ],
  "icons": {
    "32": "content/icon.png"
  },
  "default_locale": "en-US",
  "background": {
    "scripts": ["background.js"]
  },
  "experiment_apis": {
    "WindowListener": {
      "schema": "api/WindowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "api/WindowListener/implementation.js"
      }
    },
    "LegacyMenu": {
      "schema": "api/LegacyMenu/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LegacyMenu"]],
        "script": "api/LegacyMenu/implementation.js"
      }
    }
  }
}
